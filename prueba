CREATE TABLE Plantas (
    ID_PLANTA INT PRIMARY KEY,
    Nombre_Comun VARCHAR(100),
    Tipo VARCHAR(50),
    Cantidad_Sol_Luz VARCHAR(50),
    Espacio VARCHAR(50),
    Temperatura VARCHAR(50),
    Localizacion VARCHAR(100),
    Humedad VARCHAR(50),
    PH VARCHAR(10),
    Nombre_Cientifico VARCHAR(100),
    Genero VARCHAR(50),
    Familia VARCHAR(50),
    Duracion VARCHAR(50),
    Imagen TEXT,
    Toxicidad VARCHAR(50),
    Descripcion TEXT,
    Cultivo TEXT
);

